function Punctuate() {
  axios
    .post("http://bark.phon.ioc.ee/punctuator", {
      text: "hello world i am asag"
    })
    .then(
      (response) => {
        console.log(response);
      },
      (error) => {
        console.log(error);
      }
    );
}



