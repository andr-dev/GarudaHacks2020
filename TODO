    var xhr = new XMLHttpRequest();
    xhr.open("POST", "http://bark.phon.ioc.ee/punctuator", true);

    var data = new FormData();
    data.append("text", "hello there my name is bob");

    xhr.onprogress = function () {
      console.log(xhr.responseText);
    };

    xhr.send(data);


